mkdir -p casa-lxqt/{DEBIAN,usr/local/bin} && \
cat <<EOF > casa-lxqt/DEBIAN/control
Package: casa-lxqt
Version: 1.0
Section: utils
Priority: optional
Architecture: all
Maintainer: Casa Linux <casalinuxos@gmail.com>
Description: Instalação mínima do ambiente LXQt
EOF
&& \
cat <<'EOF' > casa-lxqt/usr/local/bin/casa-instalar.sh
#!/bin/bash

sudo apt update

sudo apt install --no-install-recommends -y lxqt-core lxqt-panel lxqt-session lxterminal pcmanfm-qt qterminal qps lightdm lightdm-gtk-greeter lxappearance gvfs gvfs-backends gvfs-fuse xfce4-power-manager network-manager-gnome eog evince gnome-disk-utility nautilus-share samba gedit gdeb gparted synaptic gnome-software file-roller gzip bzip2 xz-utils zip unzip tar p7zip-full lz4 zstd rar unrar firmware-iwlwifi firmware-realtek firmware-atheros firmware-brcm80211 firmware-mediatek bluez blueman rfkill hplip cups ttf-mscorefonts-installer gnome-font-viewer gnome-characters gnome-clocks gnome-contacts vlc rhythmbox evolution gnome-software-plugin-flatpak gnome-software-plugin-snap gnome-software-plugin-deb gnome-software-plugin-fwupd gnome-software-common gnome-software-dev gnome-software-doc snapd linux-firmware mesa-utils xserver-xorg xserver-xorg-core xserver-xorg-video-all xserver-xorg-input-all hwinfo usbutils pciutils smartmontools lm-sensors arc-theme yaru-theme-gtk yaru-theme-icon yaru-theme-sound suru-icon-theme numix-icon-theme numix-gtk-theme

flatpak remote-add --if-not-exists flathub https://dl.flathub.org/repo/flathub.flatpakrepo

echo "✅ LXQt instalado com sucesso! Reinicie o sistema para começar a usar."
EOF
&& \
chmod +x casa-lxqt/usr/local/bin/casa-instalar.sh && \
dpkg-deb --build casa-lxqt
